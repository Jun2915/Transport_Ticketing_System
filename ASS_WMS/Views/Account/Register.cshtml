@model RegisterVM

@{
    ViewBag.Title += " | Register";
}

<form class="form" method="post" enctype="multipart/form-data">
    <div asp-validationo-summary="ModelOnly"></div>
    
    <label asp-for="Name"></label>
    <input asp-for="Name" />
    <span asp-validation-for="Name"></span>

    <label asp-for="Email"></label>
    <input asp-for="Email" />
    <span asp-validation-for="Email"></span>

    <label asp-for="Password"></label>
    <input asp-for="Password" />
    <span asp-validation-for="Password"></span>

    <label asp-for="ConfirmPassword"></label>
    <input asp-for="ConfirmPassword" />
    <span asp-validation-for="ConfirmPassword"></span>

    <label asp-for="PhoneNumber"></label>
    <input asp-for="PhoneNumber" />
    <span asp-validation-for="PhoneNumber"></span>

    <label asp-for="Photo" id="photoLabel">Profile Photo</label>
    <label class="upload">
        <small id="photoText">Select Photo...</small><br />
        <input asp-for="Photo" accept="image/jpeg, image/png" hidden id="photoInput" />
        <img src="/userPhoto/uploadPhoto.png" style="width:100px; height:100px;" />
    </label>
    <span asp-validation-for="Photo"></span>

    <section>
        <button>Register</button>
        <button type="reset">Reset</button>
    </section>
</form>